<% provide(:title, "Profile") %>
<h1>Profile</h1>

<div class="row">
  <div class="span6 offset3">
	<%= simple_form_for(@user, html: { class: 'form-vertical'}) do |f| %>
	  <%= render 'shared/error_messages' %>
		<%= f.input :first_name, disabled: true	%>
		<%= f.input :last_name, disabled: true %>
		<%= f.input :email, disabled: true %>
		<%= f.input :address_line_1, label: "Address line 1", disabled: true %>
		<%= f.input :town, disabled: true %>
		<%= f.input :phone_number, disabled: true %>
		<% end %>
	</div>
</div>
