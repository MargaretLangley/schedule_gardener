<% provide(:title, "Profile") %>
<h1>Profile</h1>

<div class="row">
  <div class="span6 offset3">
  <%= simple_form_for(@user, defaults: {disabled: true, required: false }, html: { class: 'form-vertical'}) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.simple_fields_for :contact do |c| %>
      <%= c.input :first_name %>
      <%= c.input :last_name %>
      <%= c.input :email %>
      <%= c.simple_fields_for :address do |address| %>
        <%= render partial: 'shared/address', locals: {f: address} %>
      <% end %>
      <%= c.input :home_phone %>
    <% end %>
    <% end %>
  </div>
</div>