<% provide(:title, 'Users') %>

<div class='flex-header'>
  <h1>Users</h1>
<div>

<div class='flex-nav'>
  <%= render 'shared/main_navigation' %>
</div>

<div class='flex-single'>
  <%= form_tag users_path, method: 'get', class: 'form-inline  well'  do %>


      <%= text_field_tag :search, params[:search], placeholder: 'Search', class: 'input-query' %>
        <button id='go_search' type='submit' value='search', class: 'standard_button' ><span class='glyphicon glyphicon-search'></span></button>
      <% end %>
</div>

<div class='flex-single'>
  <div class='article500'>

    <br>
    <div class='contain'>
        <div class='columnhead200'>Name</div>
        <div class='columnhead150'>Phone</div>
        <div class='columnhead50'>Edit</div>
        <div class='columnhead50'>Actions</div>
        <div class='columnhead50'></div>
    </div>

    <% if @users.count > 0 %>
      <% @users.each do |user| %>
        <%= render user  %>
    <% end %>
    <% else %>
      <div colspan='4'><h2>No Matching Users</h2></div>
    <% end %>
    <%= will_paginate %>
    <div class='clear-fix  form-group'>
      <%= link_to 'Create User', signup_path, class: 'btn  btn-primary  btn-lg  spacer-left' %>
    </div>
  </div><!-- article500 -->
</div><!--flex-single-->
