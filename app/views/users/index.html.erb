<% provide(:title, 'Users') %>
<h1>Users</h1>

<%= form_tag users_path, :method => 'get' , class: "well form-search"  do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
  <p>
    <%= text_field_tag :search, params[:search], class: "input-medium search-query", placeholder: "Search" %>
    <%= submit_tag "search", class: "btn", :name => nil, placeholder: "Search" %>
     <div class="icon-search"></div>
  </p>
<% end %>

<%= will_paginate %>

<table class="table table-striped">
	  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Edit</th>
      <th>Actions</th>
    </tr>
  </thead>
<tbody>
	<% @users.each do |user| %>
	<tr>
		<%= render user  %>
	</tr>
	<% end %>
</tbody>
</table>
<%= will_paginate %>