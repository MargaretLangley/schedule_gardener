<% provide(:title, 'Users') %>

<div class="row-fluid">
  <div class="span12">
    <h1>Users</h1>
  </div>
<div>

<div class="row-fluid">
  <div class="span12">
  <%= render 'shared/main_navigation' %>
  </div
</div>

<div class="row-fluid">
  <div class="span12">
    <%= form_tag users_path, :method => 'get', class: "form-search"  do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search", class: "input-query" %>
    <button id="go_search" type="submit" value="search", class: "btn" ><i class="icon-search"></i></button>
    <% end %>

    <%= will_paginate %>

    <table class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Edit</th>
          <th>Actions</th>
        </tr>
      </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <%= render user  %>
      </tr>
      <% end %>
    </tbody>
    </table>
    <%= will_paginate %>
  </div><!-- span  -->
</div><!-- row fluid -->





