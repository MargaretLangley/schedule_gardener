<% provide(:title, 'Users') %>

<div class="row-fluid">
  <div class="span12">
    <h1>Users</h1>
  </div>
<div>

<div class="row-fluid">
  <div class="span12">
  <%= render 'shared/main_navigation' %>
  </div
</div>

<div class="row-fluid">

  <div class="span3">
  </div><!--/span-->

  <div class="span9">
    <%= form_tag users_path, :method => 'get', class: "form-search"  do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search", class: "input-query" %>
    <button id="go_search" type="submit" value="search", class: 'standard_button' ><i class="icon-search"></i></button>
    <% end %>

    <%= will_paginate %>

    <table class="table table-striped">
        <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Edit</th>
          <th>Actions</th>
        </tr>
      </thead>
    <tbody>
      <% if @users.count > 0 %>
        <% @users.each do |user| %>
        <tr>
          <%= render user  %>
        </tr>
        <% end %>
      </tbody>
      </table>
      <% else %>
        <tr><td colspan="4"><h2>No Matching Users</h2></td></tr>
      <% end %>
    <%= will_paginate %>
    <%= link_to 'Create User', signup_path, class: 'primary_action_button' %>
  </div><!--/span-->
</div><!--/row-->



