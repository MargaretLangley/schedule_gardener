<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>





<div class='row'>
  <div class='col-md-6  col-md-offset-3'>
  <%= simple_form_for @user, html: { class: 'form-horizontal'}, url: :signup, method: :post do |f| %>
    <%= render 'shared/error_messages', object: f.object  %>

    <%= f.simple_fields_for :contact do |c| %>
      <div class='form-group'>
        <%= c.input :first_name %>
      </div>
      <div class='form-group'>
        <%= c.input :last_name %>
      </div>
      <div class='form-group'>
        <%= f.input :password  %>
      </div>
      <div class='form-group'>
        <%= f.input :password_confirmation, label: 'Confirm password' %>
      </div>
      <div class='form-group'>
        <%= c.input :email %>
      </div>
      <%= c.simple_fields_for :address do |address| %>
        <%= render partial: 'shared/address', locals: { f: address } %>
      <% end %>
      <div class='form-group'>
        <%= c.input :home_phone %>
      </div>
    <% end %>
    <div class='form-group'>
      <div class='row'>
        <div class='col-xs-5  col-sm-3  col-md-5'>
          <%= f.button :submit, value: 'Create account', class: 'btn  btn-primary' %>
        </div>
        <% if current_user && current_user.gardener? %>
          <div class='col-xs-5  col-sm-3  col-md-3'>
            <%= link_to 'Cancel', appointments_path, class: 'btn  btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  </div>
</div>
