<% provide(:title, 'Update Profile') %>
<div class='row'>
  <div class='col-md-12'>
    <h1>Update Profile</h1>
  </div>
<div>

<div class='row'>
  <div class='col-md-6  col-md-offset-3'>
  <%= simple_form_for(@user, html: { class: 'form-horizontal'}, url: edit_profile_path(@user)) do |f| %>
    <%= render 'shared/error_messages', object: f.object  %>

    <%= f.simple_fields_for :contact do |c| %>
      <div class='form-group'>
        <%= c.input :first_name %>
      </div>
      <div class='form-group'>
        <%= c.input :last_name %>
      </div>
      <div class='form-group'>
        <%= c.input :email %>
      </div>

      <%= c.simple_fields_for :address do |address| %>
        <%= render partial: 'shared/address', locals: { f: address } %>
      <% end %>
      <div class='form-group'>
        <%= c.input :home_phone %>
      </div>
    <% end %>
    <div class='form-group'>
      <div class='row'>
        <div class='col-xs-5  col-sm-3  col-md-5'>
          <%= f.button :submit, value: 'Update Profile',class: 'btn  btn-primary' %>
        </div>
        <div class='col-xs-5  col-sm-3  col-md-3'>
        <%= link_to 'Cancel', users_path, class: 'btn  btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
  </div> <!-- col-md-6 col-md-offset-3 -->
</div> <!-- row fluid -->
