<% provide(:title, 'Update Profile') %>

<div class = 'flex-header'>
  <h1>Update Profile</h1>
<div>

<div class = 'flex-form'>
  <div class = 'article-form'>

    <%= simple_form_for(@user, html: {}, url: edit_profile_path(@user)) do |f| %>
      <%= render 'shared/error_messages', object: f.object  %>

      <%= f.simple_fields_for :contact do |c| %>
        <div><%= c.input :first_name %></div>
        <div><%= c.input :last_name %></div>
        <div><%= c.input :email %></div>

        <%= c.simple_fields_for :address do |address| %>
          <%= render partial: 'shared/address', locals: { f: address } %>
        <% end %>
        <div><%= c.input :home_phone %></div>
      <% end %>

      <div class = 'flex-form'>
          <%= f.button :submit, value: 'Update Profile',class: 'flex-button-box  btn  btn-primary' %>
          <%= link_to 'Cancel', users_path, class: 'flex-button-box  btn  btn-danger' %>
      </div> <!-- flex-form -->

    <% end %>

  </div> <!-- article-form -->
</div> <!-- flex-form -->
