<div class = 'flex-container'>

  <div class = 'flex-image'>
    <img  src = '/images/sign.jpg' />
  </div>

  <div class = 'flex-middle'></div>

  <div class = 'article'>

    <% provide(:title, 'Sign in') %>
    <h1>Sign in</h1>

    <%= form_for(:session, url: signin_path) do |f| %>

      <div class='form-group'>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class='form-group'>
        <%= f.button :submit, value: 'Sign in', class: 'btn  btn-primary' %>
        <%= link_to 'forgotten password?', new_password_reset_path, class: 'spacer-1-24' %>
      </div>

      <div class='form-group  line-spacer-3'>
        <%= link_to 'New user? Sign up now!', signup_path %>
      </div>
    <% end %>
  </div>
</div>

