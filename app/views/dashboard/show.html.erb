<% provide(:title, 'Dashboard') %>

<header class='row'>
  <h1 class='col-sm-12 col-md-12'>Dashboard</h1>
</header>

<div class='row'>
  <div class='col-md-12'>
  <%= render 'shared/main_navigation' %>
  </div
</div>

<div class='row'>
  <div class='col-md-6 well'>
    <h2>Appointments</h2>
    <h2>Today</h2>
    <%= render 'appointments/appointments_table', object: @appointments.in_time_range(Time.zone.now.beginning_of_day..Time.zone.now.end_of_day)  %>
    <h2>Tomorrow</h2>
    <%= render 'appointments/appointments_table', object: @appointments.in_time_range(Time.zone.now.beginning_of_day + 1.day ..Time.zone.now.end_of_day + 1.day) %>
  </div>
  <article class='col-md-6 well'>
    <h2>Contact Me</h2>
    <%= render 'touches/touches_table', object: @touches %>
  </article>

</div>

