<% provide(:title, 'Dashboard') %>

<header class='row-fluid'>
  <h1 class='span12'>Dashboard</h1>
</header>

<div class='row-fluid'>
  <div class='span12'>
  <%= render 'shared/main_navigation' %>
  </div
</div>

<div class='row-fluid'>
  <div class='span6 well'>
    <h2>Appointments</h2>
    <h2>Today</h2>
    <%= render 'appointments/appointments_table', object: @user.contact.visits.in_time_range(Time.zone.now.beginning_of_day..Time.zone.now.end_of_day)  %>
    <h2>Tomorrow</h2>
    <%= render 'appointments/appointments_table', object: @user.contact.visits.in_time_range(Time.zone.now.beginning_of_day + 1.day ..Time.zone.now.end_of_day + 1.day) %>
  </div>
  <article class='span6 well'>
    <h2>Contact Me</h2>
    <%= render 'touches/touches_table', object: @touches %>
  </article>

</div>

