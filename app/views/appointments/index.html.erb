<% provide(:title, 'Appointment') %>
<h1>Appointments</h1>

<table>
  <tr>
    <th>Title</th>
    <th>With</th>
    <th>Starts at</th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.event.title %></td>
    <td><%= appointment.appointee.full_name %></td>
    <td><%= appointment.event.starts_at %></td>
    <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%= link_to 'Delete', appointment_path(appointment), confirm: 'You sure?' , method: 'delete' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New', new_appointment_path %>

<%= debug(@appointments) unless Rails.env.production? %>

