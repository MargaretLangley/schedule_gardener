<% provide(:title, 'Appointment') %>

<div class='flex-header'>
  <h1>Appointments</h1>
<div>

<div class='flex-nav'>
  <%= render 'shared/main_navigation' %>
</div>

<div class='row'>

  <div class='col-md-3'>
    <% if current_gardener? %>
      <%= render 'nav_index' %>
    <% end %>
    <p><img  src = '/images/appointments.jpg' /></p>
  </div>  <!-- col-md-3 -->

  <div class='col-md-9 well'>
   <%= render 'appointments_table', object: @appointments %>
   <%= link_to 'Create Appointment', new_appointment_path, class: 'btn btn-primary btn-lg' %>
  </div> <!--col-md-9-->
</div> <!--/row-->

