<% provide(:title, 'Appointment') %>

<div class = 'flex-header'>
  <h1>Appointments</h1>
<div>

<div class = 'flex-nav'>
  <%= render 'shared/main_navigation' %>
</div>

<div class = 'flex-container'>

  <div class = 'flex1'>
    <% if current_gardener? %>
      <%= render 'nav_index' %>
    <% end %>
  </div>

  <div class = 'flex2'>
    <%= render 'appointments_table', object: @appointments %>
    <%= link_to 'Create Appointment', new_appointment_path, class: 'btn  btn-primary  btn-lg  spacer-left' %>
    <br>&nbsp;
  </div>

  <div class = 'flex-middle'></div>

</div>

