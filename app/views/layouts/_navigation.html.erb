<div class='container-fluid'>
  <a class='btn btn-navbar' data-toggle='collapse' data-target='.nav-collapse'>
    <span class='icon-bar'></span>
    <span class='icon-bar'></span>
    <span class='icon-bar'></span>
  </a>
  <a id='logo' class='brand' href='<%= root_path %>'>Garden Care <%= raw("<i class=\"icon-leaf icon-white\"></i>") %></a>

  <div class='nav-collapse collapse'>
    <ul class='nav pull-right'>
    <% if signed_in? %>
      <li id='fat-menu' class='dropdown'>
        <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
          <%= raw("<i class=\"icon-user icon-white\"></i>") + current_user.full_name %><b class='caret'></b>
        </a>
        <ul class='dropdown-menu'>
          <li><%= link_to 'Update Profile', edit_profile_path(current_user) %></li>
          <li class='divider'></li>
          <li>
            <%= link_to 'Sign out', signout_path, method: 'delete' %>
          </li>
        </ul>
      </li>
    <% else %>
      <li><%= link_to 'Sign in', signin_path %></li>
    <% end %>
  </ul>  </div><!--/.nav-collapse -->
</div>


