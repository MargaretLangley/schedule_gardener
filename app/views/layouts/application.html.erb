<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>    
    <%= favicon_link_tag "icons/spade.png"  unless ENV['RAILS_ENV'] == "production"  %>
    <%= favicon_link_tag "icons/favicon.png" if ENV['RAILS_ENV'] == "production"  %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div class="container">
      <%= render 'layouts/messages' %>
      <%= yield %>
      <%= render 'layouts/footer' %>
      <%= debug(params) unless Rails.env.production? %>
      <%= debug(Rails.env) unless Rails.env.production? %>
    </div>
  </body>
</html>
